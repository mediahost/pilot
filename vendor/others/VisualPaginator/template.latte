{*
 * @version    $Id: template.phtml 2 2009-07-13 20:58:52Z david@grudl.com $
 * @param Paginator $paginator
 * @param array     $steps
 *} 

{if $paginator->pageCount > 1}
<div class="paginator">
	{if $paginator->isFirst()}
	<span class="button end">« {ifset $translate}{_"Previous"}{else}Previous{/ifset}</span>
	{else}
	<a href="{link this, 'page' => $paginator->page - 1}" class="end">« {ifset $translate}{_"Previous"}{else}Previous{/ifset}</a>
	{/if}

	{foreach $steps as $step}
	{if $step == $paginator->page}
		<span class="current">{$step}</span>
	{else}
		<a href="{link this, 'page' => $step}">{$step}</a>
	{/if}
	{if $iterator->nextValue > $step + 1}<span>…</span>{/if}
	{/foreach}

	{if $paginator->isLast()}
	<span class="button end">{ifset $translate}{_"Next"}{else}Next{/ifset} »</span>
	{else}
	<a href="{link this, 'page' => $paginator->page + 1}" class="end">{ifset $translate}{_"Next"}{else}Next{/ifset} »</a>
	{/if}
</div>
{/if}
